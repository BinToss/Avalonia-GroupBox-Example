{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "description": "the target framework",
            "id": "targetFramework",
            "type": "pickString",
            "options": [
                "net6.0",
                "net7.0",
                "net8.0"
            ],
            "default": "net6.0"
        }
    ],
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/GroupBox.Avalonia.Sample/bin/Debug/${input:targetFramework}/GroupBox.Avalonia.Sample.dll",
            "args": [],
            "cwd": "${workspaceFolder}/GroupBox.Avalonia.Sample",
            "console": "internalConsole",
            "stopAtEntry": false,
            "justMyCode": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}