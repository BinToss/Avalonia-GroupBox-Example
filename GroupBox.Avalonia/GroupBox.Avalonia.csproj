<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>net6.0</TargetFramework> 
    <Nullable>enable</Nullable>
    <BuiltInComInteropSupport>true</BuiltInComInteropSupport>
    <AvaloniaUseCompiledBindingsByDefault>true</AvaloniaUseCompiledBindingsByDefault>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>BinToss.GroupBox.Avalonia</PackageId>
    <!-- <Title>PackageId</Title> --><!-- use PackageId -->
    <!-- <Version>1.0.0</Version> --><!-- assigned by GitVersion, semantic-release -->
    <Authors>BinToss</Authors>
    <!-- <Company>MyCompany Inc</Company> -->
    <Product>GroupBox control for AvaloniaUI</Product>
    <Description>Another attempt to recreate the GroupBox control for AvaloniaUI.</Description>
    <Copyright>Â© 2023 Noah Sherwin</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <!-- <PackageIconUrl>http://Your.Icon.Url</PackageIconUrl> -->
    <PackageTags>Avalonia AvaloniaUI GroupBox</PackageTags>
    <!-- <PackageReleaseNotes>http://Your.ReleaseNotes.Url</PackageReleaseNotes> -->
    <!-- <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance> -->
    <RepositoryUrl>https://github.com/BinToss/GroupBox.Avalonia</RepositoryUrl>
    <PackageProjectUrl>$(RepositoryUrl)</PackageProjectUrl>
    <RepositoryType>git</RepositoryType>
    <IncludeSource>true</IncludeSource><!-- ...in snupkg -->
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols><!-- ...in snupkg -->
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <_compile Include="**/*.cs" Exclude="obj/**/*.cs" />
    <None Include="@(_compile)" /> <!-- Because ms-dotnettools.csdevkit refuses to show them in Solution Explorer -->
    <_pages Include="@(_compile -> '%(RecursiveDir)%(Filename)')" />
    <Page Include="@(_pages -&gt; Exists())" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" Version="11.0.5" />
    <PackageReference Include="Avalonia.Themes.Fluent" Version="11.0.5" />
    <PackageReference Include="Avalonia.Themes.Simple" Version="11.0.5" />
    <!--Condition below is needed to remove Avalonia.Diagnostics package from build output in Release configuration.-->
    <PackageReference Condition="'$(Configuration)' == 'Debug'" Include="Avalonia.Diagnostics" Version="11.0.5" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" PrivateAssets="All"/>
  </ItemGroup>
</Project>
